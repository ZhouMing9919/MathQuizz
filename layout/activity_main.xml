<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gamedesign.mathquizz.MainActivity">

    <TextView
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plusSign"
        android:textSize="70sp"
        android:layout_alignBaseline="@+id/num1"
        android:layout_alignBottom="@+id/num1"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/holo_orange_dark"/>

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num2"
        android:textSize="55sp"
        android:layout_alignBaseline="@+id/plusSign"
        android:layout_alignBottom="@+id/plusSign"
        android:layout_alignLeft="@+id/score"
        android:layout_alignStart="@+id/score"
        android:textColor="@android:color/holo_green_light"/>

    <Button
        android:text="Yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:id="@+id/yes"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/plusSign"
        android:layout_toEndOf="@+id/plusSign"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"/>

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:textSize="50sp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/yes"
        android:layout_alignStart="@+id/yes"
        android:textColor="@android:color/black"/>

    <TextView
        android:text="Score:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scoreText"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/score"
        android:layout_alignBottom="@+id/score"
        android:layout_toRightOf="@+id/num1"
        android:layout_toEndOf="@+id/num1"
        android:textColor="@android:color/black"/>

    <Button
        android:text="No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/no"
        android:layout_alignBaseline="@+id/yes"
        android:layout_alignBottom="@+id/yes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"/>

    <Button
        android:text="New Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/newGame"/>

    <ProgressBar
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/no"
        android:layout_marginBottom="21dp"
        android:id="@+id/progressBar"
        android:layout_alignRight="@+id/yes"
        android:layout_alignEnd="@+id/yes"
        android:layout_alignLeft="@+id/no"
        android:layout_alignStart="@+id/no"/>

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/num1"
        android:textSize="55sp"
        android:layout_below="@+id/score"
        android:layout_alignRight="@+id/newGame"
        android:layout_alignEnd="@+id/newGame"
        android:layout_marginTop="45dp"
        android:textColor="@android:color/holo_green_light"/>

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer"
        android:textSize="60sp"
        android:layout_below="@+id/plusSign"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:textColor="@android:color/holo_blue_light"/>

</RelativeLayout>

